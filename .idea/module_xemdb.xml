<?xml version="1.0" encoding="UTF-8"?>
<project name="module_xemdb" default="compile.module.xemdb">
  <dirname property="module.xemdb.basedir" file="${ant.file.module_xemdb}"/>
  
  <property name="module.jdk.home.xemdb" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.xemdb" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.xemdb" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.xemdb" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="xemdb.output.dir" value="undefined"/>
  <property name="xemdb.testoutput.dir" value="undefined"/>
  
  <path id="xemdb.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="xemdb.module.production.classpath"/>
  
  <path id="xemdb.runtime.production.module.classpath"/>
  
  <path id="xemdb.module.classpath"/>
  
  <path id="xemdb.runtime.module.classpath"/>
  
  
  <patternset id="excluded.from.module.xemdb">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.xemdb">
    <patternset refid="excluded.from.module.xemdb"/>
  </patternset>
  
  
  <target name="compile.module.xemdb" depends="compile.module.xemdb.production,compile.module.xemdb.tests" description="Compile module xemdb"/>
  
  <target name="compile.module.xemdb.production" depends="register.custom.compilers" description="Compile module xemdb; production classes"/>
  
  <target name="compile.module.xemdb.tests" depends="register.custom.compilers,compile.module.xemdb.production" description="compile module xemdb; test classes" unless="skip.tests"/>
  
  <target name="clean.module.xemdb" description="cleanup module">
    <delete dir="${xemdb.output.dir}"/>
    <delete dir="${xemdb.testoutput.dir}"/>
  </target>
</project>